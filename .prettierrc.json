{
    "printWidth": 80,
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "overrides": [
        {
            "files": [
                "*.scss",
                "*.css"
            ],
            "options": {
                "requirePragma": false,
                "parser": "scss"
            }
        },
        {
            "files": [
                "*.yml"
            ],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.html",
            "options": {
                "requirePragma": false,
                "parser": "html",
                "htmlWhitespaceSensitivity": "ignore"
            }
        }
    ]
}
